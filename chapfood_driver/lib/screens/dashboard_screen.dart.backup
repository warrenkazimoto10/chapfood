  }

  /// Carte Google Maps plein √©cran
  Widget _buildMapView() {
    return GoogleMap(
      mapType: MapType.normal,
      initialCameraPosition: CameraPosition(
        target: LatLng(
          _currentPosition?.latitude ?? 5.3600,
          _currentPosition?.longitude ?? -4.0083,
        ),
        zoom: 15.0,
      ),
      markers: _markers,
      onMapCreated: _onMapCreated,
      myLocationEnabled:
          false, // D√©sactiv√© pour √©viter le doublon avec notre marqueur personnalis√©
      myLocationButtonEnabled: false,
    );
  }

  /// Initialisation de la carte
  Future<void> _onMapCreated(GoogleMapController controller) async {
    _mapController = controller;

    try {
      // Si on a d√©j√† une position, ajouter le marqueur et centrer
      if (_currentPosition != null) {
        await _updateDriverMarkerOnMap();
        // Centrer la carte sur la position du livreur au chargement
        await Future.delayed(const Duration(milliseconds: 500));
        await _centerMapOnDriverPosition();
      } else {
        // Attendre un peu et r√©essayer si la position n'est pas encore disponible
        Future.delayed(const Duration(seconds: 1), () async {
          if (mounted && _currentPosition == null) {
            final position = await DriverLocationService.getCurrentPosition();
            if (position != null && mounted) {
              setState(() {
                _currentPosition = position;
              });
              await _updateDriverMarkerOnMap();
              await Future.delayed(const Duration(milliseconds: 500));
              await _centerMapOnDriverPosition();
            }
          }
        });
      }
    } catch (e) {
      print('‚ùå Erreur initialisation carte: $e');
    }
  }

  /// Cr√©er un marqueur directionnel avec halo (sans popup)
  Future<BitmapDescriptor> _createDirectionalMarker() async {
    final bearing =
        _currentBearing ?? 0.0; // Utiliser le bearing calcul√© ou 0 par d√©faut
    return await DirectionalMarker.createDirectionalMarker(
      color: Colors.blue,
      bearing: bearing,
      showPopup: false,
    );
  }

  /// Centrer la carte sur la position du livreur
  Future<void> _centerMapOnDriverPosition() async {
    // Obtenir la position actuelle si elle n'est pas disponible
    if (_currentPosition == null) {
      final position = await DriverLocationService.getCurrentPosition();
      if (position != null && mounted) {
        setState(() {
          _currentPosition = position;
        });
      } else {
        print('‚ö†Ô∏è Position non disponible pour centrer la carte');
        return;
      }
    }

    if (_mapController == null || _currentPosition == null) {
      print('‚ö†Ô∏è Carte ou position non disponible');
      return;
    }

    try {
      print(
        'üìç Centrage de la carte sur: ${_currentPosition!.latitude}, ${_currentPosition!.longitude}',
      );

      await _mapController!.animateCamera(
        CameraUpdate.newLatLngZoom(
          LatLng(_currentPosition!.latitude, _currentPosition!.longitude),
          15.0,
        ),
      );

      print('‚úÖ Carte centr√©e sur la position du livreur');

      // Afficher un feedback visuel
      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          const SnackBar(
            content: Text('Carte recentr√©e sur votre position'),
            duration: Duration(seconds: 1),
            backgroundColor: Colors.green,
          ),
        );
      }
    } catch (e) {
      print('‚ùå Erreur centrage carte: $e');
      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text('Erreur lors du centrage: $e'),
            backgroundColor: Colors.red,
          ),
        );
      }
    }
  }

